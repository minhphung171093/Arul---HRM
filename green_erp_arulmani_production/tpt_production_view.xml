							</group>
						</group>
						<notebook>
							<page string = "Batch Split">
								<field name="batch_split_line" nolabel='1' context="{'default_product_id': product_id}">
									<tree editable='bottom'>
										<field name="product_id" domain="['|',('name','in',['FERROUS SULPHATE','FSH','M0501010002']),('default_code','in',['FERROUS SULPHATE','FSH','M0501010002'])]" on_change="onchange_product_id(product_id)" options="{'create': false, 'create_edit': false}"/>
										<field name="prodlot_id" domain="[('name','in',['Argi','Wet','Drier'])]" options="{'create': false, 'create_edit': false}"/>
