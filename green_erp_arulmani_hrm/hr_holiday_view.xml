<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="view_arul_hr_holiday_special_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.holiday.special.tree</field>
			<field name="model">arul.hr.holiday.special</field>
			<field name="arch" type="xml">
				<tree string="Special Holidays">
					<field name="name"/>
					<field name="date"/>
				</tree>
			</field>
		</record>
		
		<record id="view_arul_hr_holiday_special_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.holiday.special.form</field>
            <field name="model">arul.hr.holiday.special</field>
            <field name="arch" type="xml">
                <form string="Special Holidays" version="7.0">    
                	<sheet>
	                    <group>
	                    	<field name="name"/>
							<field name="date"/>
	               	  	</group>
                	</sheet>
                </form>
            </field>
        </record>     
        
        <record id="action_arul_hr_holiday_special_form" model="ir.actions.act_window">
            <field name="name">Manage Special Holidays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.holiday.special</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_holiday_special_tree_vew"/>
        </record>
        
        <menuitem id="menu_hr_leave_management" parent="hr.menu_hr_root" name="Leave Management" sequence="25"/>
        <menuitem action="action_arul_hr_holiday_special_form"
            id="menu_action_arul_hr_holiday_special_form"
            parent="menu_hr_leave_management" sequence="0"/>

            
        <record id="view_arul_hr_leave_master_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.leave.master.tree</field>
			<field name="model">arul.hr.leave.master</field>
			<field name="arch" type="xml">
				<tree string="Leave Master">
					<field name="leave_type_id"/>
					<field name="employee_category_id"/>
					<field name="employee_sub_category_id"/>
					<field name="maximum_limit"/>
					<field name="carryforward_nextyear"/>
					<field name="condition"/>
				</tree>
			</field>
		</record>


		<record id="view_arul_hr_leave_master_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.leave.master.form</field>
            <field name="model">arul.hr.leave.master</field>
            <field name="arch" type="xml">
                <form string="Leave Master" version="7.0">    
                	<sheet>
	                    <group col='4' colspan='2'>
	                    	<field name="leave_type_id"/>
	                    	<newline/>
							<field name="employee_category_id" on_change="onchange_employee_category_id(employee_category_id)" />
							<field name="employee_sub_category_id"/>
							<field name="maximum_limit"/>
							<field name="carryforward_nextyear"/>
							<field name="condition"/>
	               	  	</group>
                	</sheet>
                </form>
            </field>
        </record>     
        
        <record id="action_arul_hr_leave_master_form" model="ir.actions.act_window">
            <field name="name">Leave Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.leave.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_leave_master_tree_vew"/>
        </record>
        
        
        <menuitem action="action_arul_hr_leave_master_form"
            id="menu_action_arul_hr_leave_master_form"
            parent="menu_hr_leave_management" sequence="1"/>
            
        
        <record id="view_arul_hr_leave_types_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.leave.types.tree</field>
			<field name="model">arul.hr.leave.types</field>
			<field name="arch" type="xml">
				<tree string="Leave Types">
					<field name="code"/>
					<field name="name"/>
				</tree>
			</field>
		</record>
		

		<record id="view_arul_hr_leave_types_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.leave.types.form</field>
            <field name="model">arul.hr.leave.types</field>
            <field name="arch" type="xml">
	            <form string="Leave Types" version="7.0">   
	            	<sheet>
		                <group>    
			                <field name="code"/>
							<field name="name"/>
		                </group>   	
		         	</sheet>
		         </form>
			</field>
		</record>
          
		<record id="action_arul_hr_leave_types_form" model="ir.actions.act_window">
            <field name="name">Leave Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.leave.types</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_leave_types_tree_vew"/>
        </record>
        
        <menuitem action="action_arul_hr_leave_types_form"
            id="menu_action_arul_hr_leave_types_form"
            parent="menu_hr_leave_management" sequence="20"/>

		<record id="view_arul_hr_capture_work_shift_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.capture.work.shift.tree</field>
			<field name="model">arul.hr.capture.work.shift</field>
			<field name="arch" type="xml">
				<tree string="Capture Work Shift">
					<field name="code"/>
					<field name="name"/>
					<field name="description"/>
					<field name="start_time" widget="float_time"/>
					<field name="end_time" widget="float_time"/>
					<field name="time_total" widget="float_time"/>
					<field name="allowance"/>
				</tree>
			</field>
		</record>
		

		<record id="view_arul_hr_capture_work_shift_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.capture.work.shift.form</field>
            <field name="model">arul.hr.capture.work.shift</field>
            <field name="arch" type="xml">
	            <form string="Capture Work Shift" version="7.0">   
	            	<sheet>
		                <group>    
			                <field name="code"/>
							<field name="name"/>
							<field name="description"/>
						</group>
						<group col='4' colspan='2'>
							<field name="start_time" widget="float_time"/>
							<field name="end_time" widget="float_time"/>
							<field name="time_total" widget="float_time"/>
							<field name="allowance"/>
		                </group>   	
		         	</sheet>
		         </form>
			</field>
		</record>
          
		<record id="action_arul_hr_capture_work_shift_form" model="ir.actions.act_window">
            <field name="name">Capture Work Shift</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.capture.work.shift</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_capture_work_shift_tree_vew"/>
        </record>
        
        <menuitem action="action_arul_hr_capture_work_shift_form"
            id="menu_action_arul_hr_capture_work_shift_form"
            parent="menu_hr_leave_management" sequence="20"/>
		
        <record id="view_arul_hr_audit_shift_time_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.audit.shift.time.tree</field>
			<field name="model">arul.hr.audit.shift.time</field>
			<field name="arch" type="xml">
				<tree string="Audit Shift Time">
					<field name="employee_id"/>
					<field name="work_date"/>
					<field name="planned_work_shift_id"/>
					<field name="actual_work_shift_id"/>
					<field name="in_time" widget="float_time"/>
					<field name="out_time" widget="float_time"/>
					<field name="total_hours" widget="float_time"/>
					<field name="approval"/>
				</tree>
			</field>
		</record>
		

		<record id="view_arul_hr_audit_shift_time_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.audit.shift.time.form</field>
            <field name="model">arul.hr.audit.shift.time</field>
            <field name="arch" type="xml">
	            <form string="Audit Shift Time" version="7.0">
	            	<header>
	                    <button name="approve_shift_time" attrs="{'invisible':[('approval','=',True)]}" string="Approve" type="object" class="oe_highlight" groups="base.group_hr_manager"/>
	                    <button name="reject_shift_time" attrs="{'invisible':[('approval','=',False)]}" string="Reject" type="object" class="oe_highlight" groups="base.group_hr_manager"/>
	                </header>   
	            	<sheet>
		                <group>    
			                <field name="employee_id"/>
							<field name="work_date"/>
							<field name="planned_work_shift_id"/>
							<field name="actual_work_shift_id"/>
						</group>
						<group col='4' colspan='2'>
							<field name="in_time" widget="float_time"/>
							<field name="out_time" widget="float_time"/>
							<field name="total_hours" widget="float_time"/>
							<field name="approval"/>
		                </group>   	
		         	</sheet>
		         </form>
			</field>
		</record>
          
		<record id="action_arul_hr_audit_shift_time_form" model="ir.actions.act_window">
            <field name="name">Audit Shift Time</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.audit.shift.time</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_audit_shift_time_tree_vew"/>
        </record>
        
        <menuitem action="action_arul_hr_audit_shift_time_form"
            id="menu_action_arul_hr_audit_shift_time_form"
            parent="menu_hr_leave_management" sequence="20"/> 
            
	</data>
</openerp>