		<record id="tpt_quality_verification_form_view" model="ir.ui.view">
            <field name="name">tpt.quality.verification.form</field>
            <field name="model">tpt.quality.verification</field>
            <field name="arch" type="xml">
	            <form string="Production Batch - Quality Verification" version="7.0">   
	            <header>
	            		<button name="bt_update" states='draft' string="Update Batch Verification" type="object" class="oe_highlight" />
	            		<field name="state" widget="statusbar" statusbar_visible="draft,done" statusbar_colors='{"draft":"blue"}'/>
	           	</header>
	            	<sheet>
	            		<group col="4" colspan="2" >
	            		<group>
	            			<field name="prod_batch_id" on_change = "onchange_prod_batch_id(prod_batch_id)" options="{'create': false, 'create_edit': false}" context="{'search_batch_no_tio2':1}" />
	            			<field name="product_id" domain="['|',('name','in',['TITANIUM DIOXIDE-ANATASE','TiO2','M0501010001']),('default_code','in',['TITANIUM DIOXIDE-ANATASE','TiO2','M0501010001'])]" options="{'create': false, 'create_edit': false}" />
	            			<field name="product_type"/>
	            			<field name="warehouse_id" domain="[('usage','=','internal')]" options="{'create': false, 'create_edit': false}" />
	            		</group>
	            		<group>
	            			<field name="phy_batch_no"/>
	            			<field name="name"/>
	            			<field name="applicable_id" on_change = "onchange_applicable_id(applicable_id)" domain="[('product_id','=',product_id)]" options="{'create': false, 'create_edit': false}" />
	            		</group>
	            		</group>
	            		<notebook>
							<page string = "Batch Quality Verification Results">
								<field name="batch_quality_line" nolabel='1' >
									<tree editable = 'bottom'>
										<field name="parameters_id" readonly = '1' options="{'create': false, 'create_edit': false}"/>
										<field name="standard_value" readonly = '1' />
										<field name="exp_value" />
									</tree>
								</field>
							</page>
						</notebook>
				    </sheet>
		         </form>
			</field>
