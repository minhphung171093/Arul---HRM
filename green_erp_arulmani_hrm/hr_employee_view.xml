	                    <group>
	                    	<field name="code"/>
	                    	<field name="name"/>
	               	  	</group>
                	</sheet>
                </form>
            </field>
        </record>    
        <record id="action_arul_employee_sub_category_form" model="ir.actions.act_window">
         	
            <field name="name">Employee Sub Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.employee.sub.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_employee_sub_category_tree_vew"/>
        </record> 
        <menuitem action="action_arul_employee_sub_category_form"
            id="menu_action_arul_employee_sub_category_form"
            parent="menu_employee" sequence="2"/>
           
            <record id="view_arul_employee_actions_tree_vew" model="ir.ui.view">
			<field name="name">arul.employee.actions.tree</field>
			<field name="model">arul.employee.actions</field>
			<field name="arch" type="xml">
				<tree string="Employee Actions">
				
					<field name="code"/>
					<field name="name"/>
					<field name="active"/>
					
				</tree>
			</field>
		</record>
		
		<record id="view_arul_employee_actions_form_vew" model="ir.ui.view">
            <field name="name">arul.employee.actions.form</field>
            <field name="model">arul.employee.actions</field>
            <field name="arch" type="xml">
                <form string="Employee Actions" version="7.0">    
                	<sheet>
                	
	                    <group>
	                    	<field name="code"/>
	                    	<field name="name"/>
	                    	<field name="active"/>
	               	  	</group>
	               	  	<group string = "Action Type">
	                    <group >
	                    	<field name="action_type_ids" nolabel='1'/>
	                    </group>
	                    </group>
                	</sheet>
                </form>
            </field>
        </record>     
		
		<record id="action_arul_employee_actions_form" model="ir.actions.act_window">
         	
