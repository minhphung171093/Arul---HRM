<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
        <record id="view_epf_statement_report" model="ir.ui.view">
            <field name="name">epf.statement.report</field>
            <field name="model">epf.statement</field>
            <field name="arch" type="xml">
                <form string="EPF Statement Report" version="7.0">
                	<group>
	                    <field name='month'/>  
	                    <field name='year'/>
                 	</group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight" context="{'type':'appointments'}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_epf_statement_report" model="ir.actions.act_window">
            <field name="name">EPF Statement Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">epf.statement</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
    </data>
</openerp>

