<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="view_arul_hr_holiday_special_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.holiday.special.tree</field>
			<field name="model">arul.hr.holiday.special</field>
			<field name="arch" type="xml">
				<tree string="Special Holidays">
					<field name="name"/>
					<field name="date"/>
				</tree>
			</field>
		</record>
		
		<record id="view_arul_hr_holiday_special_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.holiday.special.form</field>
            <field name="model">arul.hr.holiday.special</field>
            <field name="arch" type="xml">
                <form string="Special Holidays" version="7.0">    
                	<sheet>
	                    <group>
	                    	<field name="name"/>
							<field name="date"/>
	               	  	</group>
                	</sheet>
                </form>
            </field>
        </record>     
		
		
        
        <record id="action_arul_hr_holiday_special_form" model="ir.actions.act_window">
            <field name="name">Manage Special Holidays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.holiday.special</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_holiday_special_tree_vew"/>
        </record>
        
        <menuitem id="menu_hr_leave_management" parent="hr.menu_hr_root" name="Leave Management" sequence="25"/>
        <menuitem action="action_arul_hr_holiday_special_form"
            id="menu_action_arul_hr_holiday_special_form"
            parent="menu_hr_leave_management" sequence="0"/>
        <record id="view_arul_hr_leave_types_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.leave.types.tree</field>
			<field name="model">arul.hr.leave.types</field>
			<field name="arch" type="xml">
				<tree string="Leave Types">
					<field name="code"/>
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<record id="view_arul_hr_leave_types_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.leave.types.form</field>
            <field name="model">arul.hr.leave.types</field>
            <field name="arch" type="xml">
	            <form string="Leave Types" version="7.0">   
	            	<sheet>
		                <group>    
			                <field name="code"/>
							<field name="name"/>
		                </group>   	
		         	</sheet>
		         </form>
			</field>
		</record>
          
		<record id="action_arul_hr_leave_types_form" model="ir.actions.act_window">
            <field name="name">Leave Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.leave.types</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_leave_types_tree_vew"/>
        </record>
        

        <menuitem action="action_arul_hr_leave_types_form"
            id="menu_action_arul_hr_leave_types_form"
            parent="menu_hr_leave_management" sequence="20"/>
		
	</data>
</openerp>