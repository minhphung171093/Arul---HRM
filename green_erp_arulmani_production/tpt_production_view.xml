        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//h1" position="replace">
						<h1>Production Declaration <field name="name" readonly="1" class="oe_inline"/> </h1>
                    </xpath>
               		<xpath expr="//group[@string='Consumed Products']" position="attributes">
						<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/group/group/div/field[@name='product_uom']" position="attributes">
						<attribute name='readonly'>1</attribute>
                    </xpath>
                    
                  	<xpath expr="//form/sheet/group/group/field[@name='product_id']" position="attributes">
						<attribute name='options'>{'create': false, 'create_edit': false}</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/group/group/field[@name='user_id']" position="before">
						<field name="norm_id" context="{'search_norm_id':1}" options ="{'create': false, 'create_edit': false}" />
                    </xpath>
                    
                    <xpath expr="//form/sheet/group/group/field[@name='bom_id']" position="attributes">
						<attribute name='options'>{'create': false, 'create_edit': false}</attribute>
                    </xpath>
                    
                   	<xpath expr="//form/sheet/group/group/field[@name='user_id']" position="attributes">
						<attribute name='options'>{'create': false, 'create_edit': false}</attribute>
                    </xpath>
                    
                    <xpath expr="//form/sheet/group/group/field[@name='location_src_id']" position="attributes">
						<attribute name='options'>{'create': false, 'create_edit': false}</attribute>
                    </xpath>
                    
                   	<xpath expr="//form/sheet/group/group/field[@name='location_dest_id']" position="attributes">
						<attribute name='options'>{'create': false, 'create_edit': false}</attribute>
                    </xpath>
                    
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='product_id']" position="replace">
						<field name="product_id" string="Materials " />
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='product_uom']" position="replace">
						<field name="product_uom" string="UOM" />
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='prodlot_id']" position="attributes">
						<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/button[@name='%(stock.move_consume)d']" position="attributes">
						<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/button[@name='%(stock.move_scrap)d']" position="attributes">
						<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/button[@name='%(stock.track_line)d']" position="attributes">
						<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='product_id']" position="after">
                    	<field name="app_quantity" readonly = "1" />
                    </xpath>
                    
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='product_qty']" position="replace">
                    </xpath>
                    
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']/group/group[@string='Products to Consume']/field/tree/field[@name='product_uom']" position="after">
                    	<field name="product_qty" string="Applied Quantity"  />
                    </xpath>
                    
                    <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']" position="attributes">
						<attribute name='string'>Products to Consume</attribute>
                    </xpath>

                    <xpath expr="//form/sheet/notebook/page[@string='Scheduled Products']" position="attributes">
						<attribute name='string'>Consumed Product</attribute>
                    </xpath>

                </data>
            </field>
        </record>

		<record id="tpt_quality_verification_tree_view" model="ir.ui.view">
			<field name="name">tpt.quality.verification.tree</field>
			<field name="model">tpt.quality.verification</field>
			<field name="arch" type="xml">
				<tree string="Production Batch - Quality Verification">
					<field name="prod_batch_id"/>
        			<field name="product_id"/>
        			<field name="product_type"/>
        			<field name="warehouse_id"/>
        			<field name="phy_batch_no"/>
        			<field name="name"/>
        			<field name="applicable_id"/>
