<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	    <!-- Manager Approve Reject -->
	    <record id="approve_or_reject_mo_form_view" model="ir.ui.view">
	        <field name="name">approve.or.reject.mo.form.view</field>
	        <field name="model">alert.form.mo</field>
	        <field eval="20" name="priority"/>
	        <field name="arch" type="xml">
	            <form string="Alert" version="7.0">
	                <h1>
	                	<field name="message"  nolabel="1" />
	                </h1>
	                <footer>
	                	<button name="approve_mo" type='object' confirm="Do you want to approve all selected MO's ?" string="Approve" class="oe_highlight"/>
	                    <button name="reject_mo" type='object' confirm="Do you want to reject all selected MO's ?" string="Reject" class="oe_highlight"/>
	                    or
	                    <button string="Cancel" special="cancel" />
	                </footer>
	            </form>
	        </field>
    	</record>

	    <record model="ir.actions.act_window" id="action_approve_or_reject_mo_form">
	        <field name="name">Manager Approve or Reject</field>
	        <field name="res_model">alert.form.mo</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="approve_or_reject_mo_form_view" />
	        <field name="context">{'default_message':'Approve or Reject?'}</field>
	        <field name="target">new</field>
	        <!-- <field name="groups_id" eval="[(6, 0, [ref('group_vvti_safety_manager')])]"/>  --> 
	    </record>
	    
	   
	 </data>   
</openerp>

