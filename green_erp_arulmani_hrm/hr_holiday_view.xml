	                    				<field name="day_6" options="{'create': false, 'create_edit': false}"/>
	                    				<field name="day_7" options="{'create': false, 'create_edit': false}"/>
	                    				<field name="day_8" options="{'create': false, 'create_edit': false}"/>
	                    				<field name="day_9" options="{'create': false, 'create_edit': false}"/>
	                    				<field name="day_10" options="{'create': false, 'create_edit': false}"/>
	                    				<field name="day_11" options="{'create': false, 'create_edit': false}"/>
