<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record id="view_res_company_form" model="ir.ui.view">
			<field name="name">res.company.form</field>
			<field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@class='oe_title']" position="after">
					<label for="company_code" string="Company code" class="oe_edit_only"/>
                        <h1>   
                        	<field name="company_code" class="oe_inline"/>         
                        </h1>  					
				</xpath>
				<xpath expr="//form/sheet/notebook/page/group/group/field[@name='company_registry']" position="after">
                	<group>
                    	<label for="reg_name" string="Regd. Office Address"/>
                        <div>
                        	<field name="reg_name" placeholder="Name"/>
                            <field name="reg_street" placeholder="Street"/>
                            <field name="reg_zip" placeholder="ZIP"/>
                            <field name="reg_city" placeholder="City"/>
                            <field name="reg_state_id" class="oe_no_button" placeholder="State"/>
                            <field name="reg_country_id" placeholder="Country" class="oe_no_button"/>
                    	</div>
                	</group>
                </xpath>
			</field>
		</record>
		
    </data>
    
</openerp>
