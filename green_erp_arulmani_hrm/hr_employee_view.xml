<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	
    	
    	<record id="view_arul_employee_category_tree_vew" model="ir.ui.view">
			<field name="name">arul.employee.category.tree</field>
			<field name="model">arul.employee.category</field>
			<field name="arch" type="xml">
				<tree string="Employee Category">
				
					<field name="code"/>
					<field name="name"/>
					<field name="active"/>
					
				</tree>
			</field>
		</record>
		
		<record id="view_arul_employee_category_form_vew" model="ir.ui.view">
            <field name="name">arul.employee.category.form</field>
            <field name="model">arul.employee.category</field>
            <field name="arch" type="xml">
                <form string="Employee Category" version="7.0">    
                	<sheet>
                	
	                    <group>
	                    	<field name="code"/>
	                    	<field name="name"/>
	                    	<field name="active"/>
	               	  	</group>
	               	  	<group string = "Sub Category">
	                    <group >
	                    	<field name="code"/>
	                    	<field name="name"/>
	                    </group>
	                    </group>
                	</sheet>
                </form>
            </field>
        </record>     
		
		<record id="action_arul_employee_category_form" model="ir.actions.act_window">
         	
            <field name="name">Employee Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.employee.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_employee_category_tree_vew"/>
        </record>
        
         <menuitem id="arul_hrm" name="Arul HRM" sequence="0"/>
        <menuitem id="menu_employee" name="Employee Category" parent="arul_hrm" sequence="0"/>
      
        
        <menuitem action="action_arul_employee_category_form"
            id="menu_action_arul_employee_category_form"
            parent="menu_employee" sequence="1"/>
    </data>
    
</openerp>
