            <field name="res_model">arul.employee.actions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_employee_actions_tree_vew"/>
        </record>
        
      
        
        <menuitem action="action_arul_employee_actions_form"
            id="menu_action_arul_employee_actions_form"
            parent="menu_employee" sequence="3"/>
            
            <record id="view_arul_employee_action_type_tree_vew" model="ir.ui.view">
			<field name="name">arul.employee.action.type.tree</field>
			<field name="model">arul.employee.action.type</field>
			<field name="arch" type="xml">
				<tree string="Action Type">
				
					<field name="code"/>
					<field name="name"/>
					
				</tree>
			</field>
		</record>
		
		<record id="view_arul_employee_action_type_form_vew" model="ir.ui.view">
            <field name="name">arul.employee.action.type.form</field>
            <field name="model">arul.employee.action.type</field>
            <field name="arch" type="xml">
                <form string="Action Type" version="7.0">    
                	<sheet>
                	
	                    <group>
	                    	<field name="code"/>
	                    	<field name="name"/>
	               	  	</group>
                	</sheet>
                </form>
            </field>
        </record>    
        <record id="action_arul_employee_action_type_form" model="ir.actions.act_window">
         	
            <field name="name">Action Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.employee.action.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_employee_action_type_tree_vew"/>
        </record> 
        <menuitem action="action_arul_employee_action_type_form"
            id="menu_action_arul_employee_action_type_form"
            parent="menu_employee" sequence="4"/> 
            
            <record id="view_arul_hr_employee_action_history" model="ir.ui.view">
            <field name="name">view.arul.hr.employee.action.history</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//page[@string='HR Settings']" position="after">
                    <page string = 'Action History'>
                    	<field name="action_history_line" nolabel='1'>
                    	<tree editable='top'>
                    		<field name ="employee_id"/>
                    		<field name ="action"/>
                    		<field name ="action_type"/>
                    		<field name ="action_date"/>
                    		<field name ="created_date"/>
                    		<field name ="created_uid"/>
                    		<field name ="reason"/>
                    		<field name ="period_from"/>
                    		<field name ="period_to"/>
                    		<field name ="department_from"/>
                    		<field name ="department_to"/>
                    	</tree>
                    	</field>
                    </page>
                    
                </xpath>
            </field>
        </record>  
        
        <record id="view_arul_hr_employee_action_history_tree_vew" model="ir.ui.view">
			<field name="name">arul.hr.employee.action.history.tree</field>
			<field name="model">arul.hr.employee.action.history</field>
			<field name="arch" type="xml">
				<tree string="Employee Promotion Action">
					<field name="action"/>
					<field name ="employee_id"/>
					<field name ="employee_category"/>
					<field name ="department_from"/>
					<field name ="designation_from"/>
					<field name ="action_date" string="Date Of Promotion"/>
					<field name ="period_from"/>
					<field name="action_type"/>
					<field name ="sub_category"/>
					<field name ="department_to"/>
					<field name ="designation_to"/>
					<field name ="period_to"/>
					<field name ="note"/>
					
				</tree>
			</field>
		</record>
		
		<record id="view_arul_hr_employee_action_history_form_vew" model="ir.ui.view">
            <field name="name">arul.hr.employee.action.history.form</field>
            <field name="model">arul.hr.employee.action.history</field>
            <field name="arch" type="xml">
                <form string="Employee Promotion Action" version="7.0">    
                	<sheet>
                	
	                 <group>
						<group>
							<field name="action" domain="[('action','=','promotion')]"/>
							<field name ="employee_id"/>
							<field name ="employee_category"/>
							<field name ="department_from"/>
							<field name ="designation_from"/>
							<field name ="action_date" string="Date Of Promotion"/>
							<field name ="period_from"/>
						</group>
						<group>
							<field name="action_type" domain="[('action_type','=','good_performance'),('action_type','=','vacancy')]"/>
							<field name ="sub_category"/>
							<field name ="department_to"/>
							<field name ="designation_to"/>
							<field name ="period_to"/>
						</group>
					</group>
					<group>
						<field name ="note"/>
					</group>
                	</sheet>
                </form>
            </field>
        </record>
        
        <record id="action_arul_hr_employee_action_history_form" model="ir.actions.act_window">
         	
            <field name="name">Employee Promotion Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">arul.hr.employee.action.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_arul_hr_employee_action_history_tree_vew"/>
        </record>  
         <menuitem action="action_arul_hr_employee_action_history_form"
            id="menu_action_arul_hr_employee_action_history_form"
            parent="menu_employee" sequence="5"/> 
            
               
    </data>
    
</openerp>
